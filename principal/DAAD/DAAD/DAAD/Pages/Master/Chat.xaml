<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DAAD.Pages.Master.Chat"
             Title="Chat">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <StackLayout HeightRequest="1000">
                <Button Text="Sala de Chat" Clicked="NavSala"/>
                <Label Text="Modo Alerta Desativado." x:Name="lAlert"/>
                <Switch IsToggled="False" Toggled="MudarAlerta"/>
                <Label Text="Lista de usuarios para entrar em chat."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <Button Text="Modal" Clicked="ModalPerfil"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>