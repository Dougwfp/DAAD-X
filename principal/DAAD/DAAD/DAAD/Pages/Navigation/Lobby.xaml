<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DAAD.Pages.Navigation.Lobby"
             Title="Principal">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" IconImageSource="zoomin.png"/>
        <ToolbarItem Text="Detalhes" IconImageSource="smartphone.png"/>
        <ToolbarItem Text="Ordenar" IconImageSource="internet.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Sobre" Clicked="IrParaSobre"/>
            <Button Text="CEP" Clicked="IrParaBuscaCep"/>
            <Button Text="Modal" Clicked="ChamarModal"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>